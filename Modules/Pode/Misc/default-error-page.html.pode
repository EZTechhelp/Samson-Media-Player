<html style='background-color: #01b0c4; overflow-y: hidden'>

    <head>
        <title>$($data.status.code)</title>
        <meta charset='utf-8'>
    </head>

    <body style='color: white; font-family: Helvetica,Arial,sans-serif;'>

        <div style='padding: 4em; text-align: center'>
            <p style='font-size: 3em;
                margin: 0;
                margin-top: 1.5em;
                margin-bottom: 0.5em;'>
                $(if ($data.status.code -eq 418) {
                    "‚òï "
                }
                else {
                    "‚ö†Ô∏è "
                })
                $($data.status.description)
            </p>
            <hr style='border-style: solid; width: 50%;' />
            <p style='font-size: 10em; margin: 0;'>
                $($data.status.code)
            </p>
            <p style='font-size: 1.3em;'>
                $($data.url)
            </p>

            $(if ($null -ne $data.exception) {
                "<pre style='text-align: left;
                    padding: 3em 5em;
                    font-size: 1.2em;
                    background-color: darkslategray;
                    border: 1px solid white;
                    border-radius: 1em;
                    margin-top: 5em;
                    max-height: 15em;
                    max-width: 100%;
                    overflow-y: auto;
                    overflow-x: auto;'>
$($data.exception.message)
$($data.exception.line)
$($data.exception.stacktrace)
    + $($data.exception.category)
                </pre>"
            })
        </div>

        <p style='text-align: center;
            width: 100%;
            font-size: 0.9em;
            position: fixed;
            bottom: 0px;'>
            üß° Powered by <a href='https://badgerati.github.io/Pode/' style='color: wheat; text-decoration: none;'>Pode</a>
        </p>

    </body>

</html>