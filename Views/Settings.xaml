<mah:MetroWindow
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:sys="clr-namespace:System;assembly=mscorlib"
                 xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
                 xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
                 xmlns:wf="clr-namespace:Microsoft.Web.WebView2.WinForms;assembly=Microsoft.Web.WebView2.WinForms"
                 xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                 xmlns:Dialogs="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
                 xmlns:PresentationOptions="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
                 xmlns:AttachedBehavior="clr-namespace:ScrollAnimateBehavior.AttachedBehaviors;assembly=EZT_MediaPlayer"
                 xmlns:mdxam="clr-namespace:MdXaml;assembly=MdXaml"
                 xmlns:mdhtml="clr-namespace:MdXaml.Html;assembly=MdXaml.Html"
                 xmlns:mdplug="clr-namespace:MdXaml.Plugins;assembly=MdXaml.Plugins"
                 xmlns:mdsvg="clr-namespace:MdXaml.Svg;assembly=MdXaml.Svg"
				 xmlns:mdgif="clr-namespace:MdXaml.AnimatedGif;assembly=MdXaml.AnimatedGif"
                 xmlns:emoji="clr-namespace:Emoji.Wpf;assembly=Emoji.Wpf"
                 WindowStartupLocation="CenterOwner"
                 WindowTransitionsEnabled="False"
                 ShowTitleBar="True"
                 ShowSystemMenu="True"
                 ShowSystemMenuOnRightClick="True"
                 IsWindowDraggable="True"
                 UseNoneWindowStyle="true"
                 LeftWindowCommandsOverlayBehavior="HiddenTitleBar"
                 RightWindowCommandsOverlayBehavior="HiddenTitleBar"
                 ShowInTaskbar="true"
                 MinWidth="500"
                 MaxWidth="600"
				 Opacity="0"
                 SizeToContent="WidthAndHeight"
                 MaxHeight="1000"
                 ResizeMode="NoResize"
                 VerticalAlignment="Stretch"
                 BorderThickness="0"
                 ShowIconOnTitleBar="true"
				 Dialogs:DialogParticipation.Register="{Binding}"
                 AllowsTransparency="true">
	<Window.TaskbarItemInfo>
		<TaskbarItemInfo/>
	</Window.TaskbarItemInfo>
	<Window.Effect>
		<DropShadowEffect/>
	</Window.Effect>
	<Window.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.GridSplitter.xaml"/>
				<ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.xaml"/>
				<ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Fonts.xaml"/>
				<ResourceDictionary Source="Views/Styles.xaml"/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Window.Resources>
	<mah:MetroWindow.LeftWindowCommands>
		<mah:WindowCommands Margin="0,0,0,5" Background="Transparent">
			<VirtualizingStackPanel IsVirtualizing="True" VirtualizationMode="Recycling" Name="Title_LeftWindowCommands_Stackpanel" Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,0,0,0">
				<Image Name="Logo" RenderOptions.BitmapScalingMode="Fant" HorizontalAlignment="Stretch" Margin="0,0,0,7" Width="89" Height="15" VerticalAlignment="Center" PresentationOptions:Freeze="True">
 					<Image.Effect>
						<DropShadowEffect Color="Black" Direction="320" ShadowDepth="3" Opacity="1"/>
					</Image.Effect>
				</Image>
				<Label Name="PageHeader" Content="" Margin="10,0,0,0" Padding="0,3,0,0" Foreground="#FF7A7A7A" FontSize="14" HorizontalAlignment="Stretch" FontWeight="Bold" VerticalAlignment="Stretch"/>
			</VirtualizingStackPanel>
		</mah:WindowCommands>
	</mah:MetroWindow.LeftWindowCommands>
	<Grid VerticalAlignment="Stretch" Name="Background_Grid" >
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition Height="220*"/>
			<RowDefinition Height="40*"/>
		</Grid.RowDefinitions>
		<Grid Name="Background_TileGrid" Grid.ColumnSpan="2" Margin="0,30,0,0" Grid.Row="0" Grid.RowSpan="3" MaxWidth="600" MinHeight="40" HorizontalAlignment="Stretch"/>
		<Image Name="Background_Image_Bottom"
		       Grid.ColumnSpan="2"
		       Grid.Row="2"
		       Grid.RowSpan="2"
		       Height="52"
		       MaxWidth="600"
		       VerticalAlignment="Bottom"/>
		<Grid Grid.Row="0" Name="Header"/>
		<mah:MetroTabControl Style="{StaticResource MahApps.Styles.TabControl.Animated}"
		                     Name="Setup_TabControl"
		                     Margin="10,0,10,0"
		                     Background="Transparent"
		                     VerticalAlignment="Top"
		                     BorderThickness="0,1,0,0"
		                     BorderBrush="#050607"
		                     HorizontalAlignment="stretch"
		                     Grid.Row="1"
		                     Grid.ColumnSpan="3"
		                     mah:TabControlHelper.Underlined="SelectedTabitem"
		                     TabStripPlacement="Top">
			<TabControl.Resources>
				<Style TargetType="{x:Type TabItem}"
				       BasedOn="{StaticResource {x:Type TabItem}}">
					<Setter Property="mah:TabControlHelper.Underlined"
					        Value="TabPanel"/>
					<Setter Property="mah:TabControlHelper.UnderlinePlacement"
					        Value="Right"/>
					<Setter Property="mah:TabControlHelper.UnderlineBrush"
					        Value="White"/>
				</Style>
			</TabControl.Resources>
			<TabItem Header="General"
			         BorderThickness="0,0,0,1"
			         BorderBrush="Gray">
				<TabItem.HeaderTemplate>
					<DataTemplate>
						<VirtualizingStackPanel IsVirtualizing="True" VirtualizationMode="Recycling" Orientation="Horizontal" Grid.Column="0" Grid.Row="0" Width="95" Margin="0,0,0,0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="Transparent">
							<iconPacks:PackIconMaterial Kind="Cogs"
							                            Margin="2 5 2 0"
							                            Width="20"
							                            Height="20"
							                            VerticalAlignment="Top" PresentationOptions:Freeze="True"/>
							<Label Name="General_Label" Content="General" FontWeight="Bold" Foreground="#FF7A7A7A" HorizontalAlignment="Center" FontSize="16"/>
						</VirtualizingStackPanel>
					</DataTemplate>
				</TabItem.HeaderTemplate>
				<ScrollViewer Name="General_ScrollViewer" Margin="0,0,0,10" Grid.Row="1" VerticalScrollBarVisibility="Auto" VerticalAlignment="Top" AttachedBehavior:ScrollAnimationBehavior.IsEnabled="True" AttachedBehavior:ScrollAnimationBehavior.TimeDuration="00:00:00.30" AttachedBehavior:ScrollAnimationBehavior.PointsToScroll="30">
					<VirtualizingStackPanel IsVirtualizing="True" VirtualizationMode="Recycling">
						<Expander
                                  Grid.Column="0"
						          Grid.Row="0"
						          Margin="0,0,0,10"
						          Grid.RowSpan="1"
						          BorderThickness="0,0,0,1"
						          mah:HeaderedControlHelper.HeaderBackground="Transparent"
						          mah:HeaderedControlHelper.HeaderForeground="White"
						          mah:HeaderedControlHelper.HeaderFontWeight="Bold"
						          mah:HeaderedControlHelper.HeaderFontSize="14"
						          ExpandDirection="Down"
						          Name="App_UI_Settings_Expander"
						          Header="Startup/UI Settings"
						          IsExpanded="True">
							<VirtualizingStackPanel IsVirtualizing="True" VirtualizationMode="Recycling">
								<Grid Margin="0,-2,0,0">
									<mah:ToggleSwitch Content="Start on Windows Login" Name="Start_On_Windows_Login_Toggle" Margin="30,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="#ffffff"/>
									<Button Name="Start_On_Windows_Login_Button" Width="20" Height="20" Margin="0,5,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Style="{StaticResource MahApps.Styles.Button.Circle}" Background="Green">
										<iconPacks:PackIconCoolicons Kind="HelpCircleOutline" PresentationOptions:Freeze="True"/>
									</Button>
								</Grid>
								<Grid Margin="0,-2,0,0">
									<mah:ToggleSwitch Content="Disable Tray Menu" Name="Disable_Tray_Toggle" Margin="30,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="#ffffff" IsEnabled="True"/>
									<Button Name="Disable_Tray_Button" Width="20" Height="20" Margin="0,5,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Style="{StaticResource MahApps.Styles.Button.Circle}" Background="Green">
										<iconPacks:PackIconCoolicons Kind="HelpCircleOutline" PresentationOptions:Freeze="True"/>
									</Button>
								</Grid>								
								<Grid Margin="0,-2,0,0">
									<mah:ToggleSwitch Content="Minimize to Tray" Name="Minimize_To_Tray_Toggle" Margin="30,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="#ffffff" IsEnabled="True" />
									<Button Name="Minimize_To_Tray_Button" Width="20" Height="20" Margin="0,5,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Style="{StaticResource MahApps.Styles.Button.Circle}" Background="Green">
										<iconPacks:PackIconCoolicons Kind="HelpCircleOutline" PresentationOptions:Freeze="True"/>
									</Button>
								</Grid>
								<Grid Margin="0,-2,0,0">
									<mah:ToggleSwitch Content="Start Minimized" Name="Start_Tray_only_Toggle" Margin="30,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="#ffffff" IsEnabled="True"/>
									<Button Name="Start_Tray_only_Button" Width="20" Height="20" Margin="0,5,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Style="{StaticResource MahApps.Styles.Button.Circle}" Background="Green">
										<iconPacks:PackIconCoolicons Kind="HelpCircleOutline" PresentationOptions:Freeze="True"/>
									</Button>
								</Grid>
								<Grid Margin="0,-2,0,0">
									<mah:ToggleSwitch Content="Start As MiniPlayer" Name="Start_Mini_only_Toggle" Margin="30,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="#ffffff" IsEnabled="True"/>
									<Button Name="Start_Mini_only_Button" Width="20" Height="20" Margin="0,5,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Style="{StaticResource MahApps.Styles.Button.Circle}" Background="Green">
										<iconPacks:PackIconCoolicons Kind="HelpCircleOutline" PresentationOptions:Freeze="True"/>
									</Button>
								</Grid>
								<Grid Margin="0,-2,0,0">
									<mah:ToggleSwitch Content="Notification Audio" Name="Notification_Audio_Toggle" Margin="30,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="#ffffff"/>
									<Button Name="Notification_Audio_Button" Width="20" Height="20" Margin="0,5,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Style="{StaticResource MahApps.Styles.Button.Circle}" Background="Green">
										<iconPacks:PackIconCoolicons Kind="HelpCircleOutline" PresentationOptions:Freeze="True"/>
									</Button>
								</Grid>
								<Grid Margin="0,-2,0,0">
									<mah:ToggleSwitch Content="Enable Snapshots" Name="SnapShots_Toggle" Margin="30,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="#ffffff" IsEnabled="True"/>
									<Button Name="SnapShots_Button" Width="20" Height="20" Margin="0,5,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Style="{StaticResource MahApps.Styles.Button.Circle}" Background="Green">
										<iconPacks:PackIconCoolicons Kind="HelpCircleOutline" PresentationOptions:Freeze="True"/>
									</Button>
								</Grid>
								<VirtualizingStackPanel IsVirtualizing="True" VirtualizationMode="Recycling" Name="App_SnapShots_StackPanel" Orientation="Horizontal" Margin="30,-2,0,0" Visibility='Visible' IsEnabled="{Binding ElementName=SnapShots_Toggle, Path=IsOn}">
									<Grid Margin="0,0,0,0">
										<mah:ToggleSwitch Content="Include App Screenshots" Name="App_SnapShots_Toggle" Margin="30,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="#ffffff"/>
										<Button Name="App_SnapShots_Button" Width="20" Height="20" Margin="0,5,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Style="{StaticResource MahApps.Styles.Button.Circle}" Background="Green">
											<iconPacks:PackIconCoolicons Kind="HelpCircleOutline" PresentationOptions:Freeze="True"/>
										</Button>
									</Grid>
								</VirtualizingStackPanel>
								<VirtualizingStackPanel IsVirtualizing="True" VirtualizationMode="Recycling" Name="SnapShots_StackPanel" Orientation="Horizontal" Margin="30,-2,0,0" IsEnabled="{Binding ElementName=SnapShots_Toggle, Path=IsOn}">
									<Label Name='SnapShots_Label' Margin="0,5,0,0" Content="Save Path:" Visibility="Visible" VerticalAlignment="Top" Foreground="#ffffff" BorderBrush="Red" BorderThickness="2,0,0,0" HorizontalAlignment="Left"/>
									<TextBox Name='SnapShots_textbox' Margin="0,5,0,0" Height="23" Text="" UndoLimit="0" TextWrapping="Wrap" MaxWidth="250" VerticalAlignment="Top" IsEnabled="true" Visibility="Visible" Background="Transparent" BorderThickness="1,1,1,1" RenderTransformOrigin="0.502,0.52" MinWidth="150" HorizontalAlignment="Left"/>
									<Button Name='SnapShots_Browse' Margin="5,2,0,0" Style="{StaticResource ToolsButtonStyle}" VerticalAlignment="Top" Width="80" HorizontalAlignment="Left" IsEnabled="true">
										<VirtualizingStackPanel IsVirtualizing="True" VirtualizationMode="Recycling" Orientation="Horizontal">
											<iconPacks:PackIconMaterial Kind="FolderOpen"
											                            Margin="4 4 2 4"
											                            Width="16"
											                            Height="16"
											                            VerticalAlignment="Center" PresentationOptions:Freeze="True"/>
											<TextBlock Text="Browse" Margin="2 4 4 4" VerticalAlignment="Center"/>
										</VirtualizingStackPanel>
									</Button>
								</VirtualizingStackPanel>
								<VirtualizingStackPanel IsVirtualizing="True" VirtualizationMode="Recycling" Orientation="Horizontal" Margin="30,0,0,0">
									<iconPacks:PackIconMaterial Kind="FolderOpen" Margin="0 2 5 0"/>
									<TextBlock>
										<Hyperlink Name='SnapShots_Hyperlink' FontSize="14" NavigateUri="" FontWeight="Bold"/>
									</TextBlock>
								</VirtualizingStackPanel>
								<Grid Margin="0,-2,0,0">
									<mah:ToggleSwitch Content="Performance Mode" Name="Performance_Mode_Toggle" Margin="30,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="#ffffff"/>
									<Button Name="Performance_Mode_Button" Width="20" Height="20" Margin="0,5,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Style="{StaticResource MahApps.Styles.Button.Circle}" Background="Green">
										<iconPacks:PackIconCoolicons Kind="HelpCircleOutline" PresentationOptions:Freeze="True"/>
									</Button>
								</Grid>
								<Grid Margin="0,-2,0,0">
									<mah:ToggleSwitch Content="Enable High DPI Support" Name="High_DPI_Toggle" Margin="30,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="#ffffff"/>
									<Button Name="High_DPI_Button" Width="20" Height="20" Margin="0,5,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Style="{StaticResource MahApps.Styles.Button.Circle}" Background="Green">
										<iconPacks:PackIconCoolicons Kind="HelpCircleOutline" PresentationOptions:Freeze="True"/>
									</Button>
								</Grid>									
							</VirtualizingStackPanel>
						</Expander>
						<Expander
                                  Grid.Column="0"
						          Grid.Row="0"
						          Margin="0,0,0,10"
						          Grid.RowSpan="1"
						          ExpandDirection="Down"
						          BorderThickness="0,0,0,1"
						          mah:HeaderedControlHelper.HeaderBackground="Transparent"
						          mah:HeaderedControlHelper.HeaderForeground="White"
						          mah:HeaderedControlHelper.HeaderFontWeight="Bold"
						          mah:HeaderedControlHelper.HeaderFontSize="14"
						          Name="MediaPlayer_Settings_Expander"
						          Header="Media Player Options"
						          IsExpanded="True">
							<VirtualizingStackPanel IsVirtualizing="True" VirtualizationMode="Recycling">
								<Grid Margin="0,0,0,0">
									<mah:ToggleSwitch Content="Use Hardware Acceleration" Name="Use_HardwareAcceleration_Toggle" Margin="30,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="#ffffff"/>
									<Button Name="Use_HardwareAcceleration_Button" Width="20" Height="20" Margin="0,5,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Style="{StaticResource MahApps.Styles.Button.Circle}" Background="Green">
										<iconPacks:PackIconCoolicons Kind="HelpCircleOutline" PresentationOptions:Freeze="True"/>
									</Button>
								</Grid>
								<Grid Margin="0,0,0,0">
									<mah:ToggleSwitch Content="Enable EQ Support for WebPlayers" Name="Enable_WebEQSupport_Toggle" Margin="30,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="#ffffff"/>
									<Button Name="Enable_WebEQSupport_Button" Width="20" Height="20" Margin="0,5,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Style="{StaticResource MahApps.Styles.Button.Circle}" Background="Green">
										<iconPacks:PackIconCoolicons Kind="HelpCircleOutline" PresentationOptions:Freeze="True"/>
									</Button>
								</Grid>								
								<Grid Margin="0,0,0,0">
									<mah:ToggleSwitch Content="Show Notifications on Playback" Name="Show_Notifications_Toggle" Margin="30,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="#ffffff"/>
									<Button Name="Show_Notifications_Button" Width="20" Height="20" Margin="0,5,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Style="{StaticResource MahApps.Styles.Button.Circle}" Background="Green">
										<iconPacks:PackIconCoolicons Kind="HelpCircleOutline" PresentationOptions:Freeze="True"/>
									</Button>
								</Grid>
								<Grid Margin="0,0,0,0">
									<mah:ToggleSwitch Content="Enable Marquee Text Overlay" Name="Enable_Marquee_Toggle" Margin="30,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="#ffffff"/>
									<Button Name="Enable_Marquee_Button" Width="20" Height="20" Margin="0,5,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Style="{StaticResource MahApps.Styles.Button.Circle}" Background="Green">
										<iconPacks:PackIconCoolicons Kind="HelpCircleOutline" PresentationOptions:Freeze="True"/>
									</Button>
								</Grid>
								<Grid Margin="0,0,0,0">
									<mah:ToggleSwitch Content="Auto Open/Close Video Player" Name="Open_VideoPlayer_Toggle" Margin="30,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="#ffffff"/>
									<Button Name="Open_VideoPlayer_Button" Width="20" Height="20" Margin="0,5,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Style="{StaticResource MahApps.Styles.Button.Circle}" Background="Green">
										<iconPacks:PackIconCoolicons Kind="HelpCircleOutline" PresentationOptions:Freeze="True"/>
									</Button>
								</Grid>
								<Grid Margin="0,0,0,0">
									<mah:ToggleSwitch Content="Remember Playback Progress" Name="Remember_Playback_Progress_Toggle" Margin="30,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="#ffffff"/>
									<Button Name="Remember_Playback_Progress_Button" Width="20" Height="20" Margin="0,5,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Style="{StaticResource MahApps.Styles.Button.Circle}" Background="Green">
										<iconPacks:PackIconCoolicons Kind="HelpCircleOutline" PresentationOptions:Freeze="True"/>
									</Button>
								</Grid>
								<Grid Margin="30,0,0,0">
									<mah:ToggleSwitch Content="Start Paused" Name="Start_Paused_Toggle" Margin="30,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="#ffffff" IsEnabled="{Binding ElementName=Remember_Playback_Progress_Toggle, Path=IsOn}"/>
									<Button Name="Start_Paused_Button" Width="20" Height="20" Margin="0,5,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Style="{StaticResource MahApps.Styles.Button.Circle}" Background="Green">
										<iconPacks:PackIconCoolicons Kind="HelpCircleOutline" PresentationOptions:Freeze="True"/>
									</Button>
								</Grid>								
								<Grid Margin="0,0,0,0">
									<mah:ToggleSwitch Content="Enable Audio Visualizations" Name="Use_Visualizations_Toggle" Margin="30,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="#ffffff"/>
									<Button Name="Use_Visualizations_Button" Width="20" Height="20" Margin="0,5,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Style="{StaticResource MahApps.Styles.Button.Circle}" Background="Green">
										<iconPacks:PackIconCoolicons Kind="HelpCircleOutline" PresentationOptions:Freeze="True"/>
									</Button>
								</Grid>
								<VirtualizingStackPanel IsVirtualizing="True" VirtualizationMode="Recycling" Orientation="Horizontal" Margin="30,0,0,0">
									<Label Name='Current_Visualization_Label' Grid.Column="0" Content="Select Visualization Plugin:" VerticalAlignment="Top" Foreground="#ffffff" Visibility="Visible" BorderBrush="Red" BorderThickness="2,0,0,0" HorizontalAlignment="Left"/>
									<ComboBox
                                              Margin="5,0,0,0"
									          Name='Current_Visualization_ComboBox'
									          mah:TextBoxHelper.ClearTextButton="True"
									          VerticalAlignment="Top"
									          Grid.Column="0"
									          Background="Transparent"
									          mah:TextBoxHelper.UseFloatingWatermark="True"
									          HorizontalAlignment="Left"
									          IsEditable="False"
									          IsEnabled="false"
									          SelectedIndex="-1">
										<ComboBox.ContextMenu>
											<ContextMenu IsEnabled="False" Visibility="Collapsed"/>
										</ComboBox.ContextMenu>
									</ComboBox>
								</VirtualizingStackPanel>
								<VirtualizingStackPanel IsVirtualizing="True" VirtualizationMode="Recycling" Orientation="Horizontal" Margin="0,5,0,0">
									<Button Name="Audio_Output_Button" Width="20" Height="20" Margin="0,5,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Style="{StaticResource MahApps.Styles.Button.Circle}" Background="Green">
										<iconPacks:PackIconCoolicons Kind="HelpCircleOutline" PresentationOptions:Freeze="True"/>
									</Button>
									<Label Name='Audio_Output_Label' Grid.Column="0" Content="Audio Output Device:" VerticalAlignment="Top" Margin="5,2,0,0" Foreground="#ffffff" Visibility="Visible" BorderBrush="Red" BorderThickness="0,0,0,0" HorizontalAlignment="Left"/>
									<ComboBox
                                              Margin="0,0,0,0"
									          Name='Audio_Output_ComboBox'
									          mah:TextBoxHelper.ClearTextButton="True"
									          VerticalAlignment="Top"
									          Grid.Column="0"
									          Background="Transparent"
									          mah:TextBoxHelper.UseFloatingWatermark="True"
									          HorizontalAlignment="Left"
									          IsEditable="False"
									          IsEnabled="True"
									          SelectedIndex="-1">
										<ComboBox.ContextMenu>
											<ContextMenu IsEnabled="False" Visibility="Collapsed"/>
										</ComboBox.ContextMenu>
									</ComboBox>
								</VirtualizingStackPanel>
								<mah:TransitioningContentControl Name="Audio_Output_transitioningControl"
								                                 VerticalAlignment="Top"
								                                 Grid.Row="2"
								                                 Height="0"
								                                 HorizontalAlignment="Left"
								                                 Background="Transparent"
								                                 Margin="0,0,0,0"
								                                 Transition="Down">
									<TextBlock Name='Audio_Output_textblock' TextWrapping="Wrap" Grid.Row="2" FontWeight="Bold" VerticalAlignment="Top" Foreground="#ffffff" Visibility="Visible" HorizontalAlignment="Stretch"/>
								</mah:TransitioningContentControl>
								<Grid Margin="0,0,0,0">
									<mah:ToggleSwitch Content="Discord Integration" Name="Discord_Integration_Toggle" Margin="30,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="#ffffff"/>
									<Button Name="Discord_Integration_Button" Width="20" Height="20" Margin="0,5,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Style="{StaticResource MahApps.Styles.Button.Circle}" Background="Green">
										<iconPacks:PackIconCoolicons Kind="HelpCircleOutline" PresentationOptions:Freeze="True"/>
									</Button>
								</Grid>
								<Grid Margin="0,0,0,0">
									<mah:ToggleSwitch Content="Enable Subtitle Controls" Name="Enable_Subtitles_Toggle" Margin="30,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="#ffffff"/>
									<Button Name="Enable_Subtitles_Button" Width="20" Height="20" Margin="0,5,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Style="{StaticResource MahApps.Styles.Button.Circle}" Background="Green">
										<iconPacks:PackIconCoolicons Kind="HelpCircleOutline" PresentationOptions:Freeze="True"/>
									</Button>
								</Grid>
								<VirtualizingStackPanel IsVirtualizing="True" VirtualizationMode="Recycling" Orientation="Horizontal" Margin="0,0,0,0">
									<Button Name="Hotkeys_Button" Width="20" Height="20" Margin="0,5,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Style="{StaticResource MahApps.Styles.Button.Circle}" Background="Green">
