<mah:MetroWindow
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:sys="clr-namespace:System;assembly=mscorlib"
                 xmlns:global="clr-namespace:System.Globalization;assembly=mscorlib"
                 xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
                 xmlns:diag="clr-namespace:System.Diagnostics;assembly=WindowsBase"
                 xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
                 xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                 xmlns:actions="clr-namespace:MahApps.Metro.Actions;assembly=MahApps.Metro"
                 xmlns:Dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
                 xmlns:PresentationOptions="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
                 xmlns:AttachedBehavior="clr-namespace:ScrollAnimateBehavior.AttachedBehaviors;assembly=EZT_MediaPlayer"
                 xmlns:WpfExtensions="clr-namespace:WpfExtensions;assembly=EZT_MediaPlayer"
                 xmlns:WPFCircleSlider="clr-namespace:WPFCircleSlider;assembly=EZT_MediaPlayer"
                 xmlns:syncfusionskin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
                 xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
                 xmlns:dd="clr-namespace:GongSolutions.Wpf.DragDrop;assembly=GongSolutions.Wpf.DragDrop"
                 xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
                 xmlns:vsm="clr-namespace:System.Windows;assembly=System.Windows"
                 xmlns:Airhack="clr-namespace:Airhack;assembly=Airhack"
                 xmlns:controlzEx="urn:controlzex"
                 xmlns:emoji="clr-namespace:Emoji.Wpf;assembly=Emoji.Wpf"
                 xmlns:controls="clr-namespace:SpectrumAnalyzer.Controls;assembly=SpectrumAnalyzer"
                 xmlns:tb="http://www.hardcodet.net/taskbar"
                 xmlns:Toolkit="clr-namespace:Microsoft.Toolkit.Wpf.UI.Controls;assembly=Microsoft.Toolkit.Wpf.UI.Controls"
                 xmlns:simpleChildWindow="clr-namespace:MahApps.Metro.SimpleChildWindow;assembly=MahApps.Metro.SimpleChildWindow"
                 xmlns:dock="clr-namespace:AvalonDock;assembly=AvalonDock"
                 xmlns:dockctrl="clr-namespace:AvalonDock.Controls;assembly=AvalonDock"
                 xmlns:treeViewEngine="clr-namespace:Syncfusion.UI.Xaml.TreeView.Engine;assembly=Syncfusion.SfTreeView.WPF"
                 xmlns:docklayout="clr-namespace:AvalonDock.Layout;assembly=AvalonDock"
                 xmlns:avalonDockProperties="clr-namespace:AvalonDock.Properties;assembly=AvalonDock"
                 xmlns:avalonDockConverters="clr-namespace:AvalonDock.Converters;assembly=AvalonDock"
                 xmlns:shell="clr-namespace:Microsoft.Windows.Shell;assembly=AvalonDock"
                 xmlns:reskeys="clr-namespace:AvalonDock.Themes.VS2013.Themes;assembly=AvalonDock.Themes.VS2013"
                 x:SynchronousMode="Async"
                 Name='Window'
                 WindowStartupLocation="CenterOwner"
                 WindowTransitionsEnabled="False"
                 BorderThickness="0"
                 ShowTitleBar="True"
                 ShowSystemMenu="True"
                 MinWidth="1630"
                 MaxWidth="1630"
                 Height="481"
                 Width="1640"
                 MinHeight="481"
                 MaxHeight="481"
                 Top="0"
                 VerticalAlignment="Stretch"
                 ShowSystemMenuOnRightClick="True"
                 TryToBeFlickerFree="False"
                 IsWindowDraggable="True"
                 UseNoneWindowStyle="false"
				 IgnoreTaskbarOnMaximize="false"
                 ShowIconOnTitleBar="false"
                 AllowsTransparency="true"
				 ShowMaxRestoreButton="True" 
                 xmlns:module="clr-namespace:SpectrumAnalyzer.Singleton;assembly=SpectrumAnalyzer"
                 xmlns:models="clr-namespace:SpectrumAnalyzer.Models;assembly=SpectrumAnalyzer">
	<Window.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="Views/Styles.xaml"/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Window.Resources>
	<Window.Background>
		<LinearGradientBrush PresentationOptions:Freeze="True" EndPoint="0.5,1" StartPoint="0.5,0">
			<GradientStop Color="Black" Offset="0.0"/>
			<GradientStop Offset="0.9" Color="Transparent"/>
		</LinearGradientBrush>
	</Window.Background>
	<Window.TaskbarItemInfo>
		<TaskbarItemInfo x:Name="Main_TaskbarItemInfo" ThumbnailClipMargin="0,0,0,0">
			<TaskbarItemInfo.ThumbButtonInfos>
				<ThumbButtonInfoCollection>
					<ThumbButtonInfo
									 DismissWhenClicked="False"
					                 Description="Play"
					                 x:Name="TaskbarItem_PlayButton"
					                 ImageSource="{iconPacks:MaterialImage Play, Brush={StaticResource MahApps.Brushes.Accent}}"/>
					<ThumbButtonInfo
									 DismissWhenClicked="False"
					                 Description="Next"
					                 x:Name="TaskbarItem_NextButton"
					                 ImageSource="{iconPacks:MaterialImage SkipNext, Brush={StaticResource MahApps.Brushes.Accent}}"/>
					<ThumbButtonInfo
							         DismissWhenClicked="False"
					                 Description="Stop"
					                 x:Name="TaskbarItem_StopButton"
					                 ImageSource="{iconPacks:MaterialImage Stop, Brush={StaticResource MahApps.Brushes.Accent}}"/>
				</ThumbButtonInfoCollection>
			</TaskbarItemInfo.ThumbButtonInfos>
		</TaskbarItemInfo>
	</Window.TaskbarItemInfo>
	<mah:MetroWindow.LeftWindowCommands>
		<mah:WindowCommands Margin="0,0,0,0" Background="Transparent" UseLayoutRounding="True">
			<Grid Name="TitleMenuGrid" Width="30" Height="30" VerticalAlignment="Top" Margin="2,0,0,0">
				<Button Name="LeftWindow_Button" Background="Transparent" ToolTip="UI/Other Options" Grid.Row="1" Grid.Column="0" Style="{StaticResource MenuButtonStyle}" BorderBrush="Transparent" Width="30" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,0">
					<Menu Grid.Row="0"
					      Margin="0,0,0,0"
					      Background="Transparent"
					      Grid.ColumnSpan="1"
					      Name="Title_menu">
						<MenuItem Name="Title_menu_title" Width="30" Height="30" Background="Transparent">
							<MenuItem.Icon>
								<iconPacks:PackIconMaterial Name="Title_bar_Image" Width="18" Height="18" Kind="DotsHorizontal" HorizontalAlignment="Center" VerticalAlignment="Top" />
							</MenuItem.Icon>
							<MenuItem Header="Stay On Top"
							          IsCheckable="True"
							          IsChecked="{Binding ElementName=Window, Path=Topmost}">
								<MenuItem.Icon>
									<iconPacks:PackIconMaterial Kind="ContentDuplicate" />
								</MenuItem.Icon>
							</MenuItem>
							<MenuItem Header="Show Max\Restore Button"
							          IsCheckable="True"
							          IsChecked="{Binding ElementName=Window, Path=ShowMaxRestoreButton}">
								<MenuItem.Icon>
									<iconPacks:PackIconMaterial Kind="WindowRestore" />
								</MenuItem.Icon>
							</MenuItem>		
							<MenuItem Header="Show Title Bar"
							          IsCheckable="True"
									  Name="ShowTitleBar_MenuItem">
								<MenuItem.Icon>
									<iconPacks:PackIconBootstrapIcons Kind="Window" />
								</MenuItem.Icon>
							</MenuItem>	
							<MenuItem Header="Remember Window Positions"
							          Name="Remember_Window_Pos_MenuItem"
							          IsCheckable="True">
								<MenuItem.Icon>
									<iconPacks:PackIconModern Kind="WindowMinimize" />
								</MenuItem.Icon>
							</MenuItem>
							<MenuItem Header="Change Theme"
							          Name="Change_Theme">
								<MenuItem.Icon>
									<iconPacks:PackIconMaterial Kind="SelectColor" />
								</MenuItem.Icon>
							</MenuItem>
							<Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" OpacityMask="{StaticResource SeparatorGradient}" Height="1" VerticalAlignment="Bottom" Margin="0,0,0,0"/>
							<MenuItem Header="Submit Feedback/Issues"
							          Name="Submit_Feedback">
								<MenuItem.Icon>
									<iconPacks:PackIconMaterial Kind="MessageAlertOutline" />
								</MenuItem.Icon>
							</MenuItem>
							<MenuItem Header="Check for Updates (WIP)"
							          Name="Check_Updates">
								<MenuItem.Icon>
									<iconPacks:PackIconMaterial Kind="Update" />
								</MenuItem.Icon>
							</MenuItem>
							<Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" OpacityMask="{StaticResource SeparatorGradient}" Height="1" VerticalAlignment="Bottom" Margin="0,0,0,0"/>
							<MenuItem Header="About"
							          Name="About_Menu">
								<MenuItem.Icon>
									<iconPacks:PackIconMaterial Kind="HelpCircleOutline" />
								</MenuItem.Icon>
							</MenuItem>
							<MenuItem Header="Dedication"
							          Name="Dedication_Menu" HorizontalContentAlignment="Left" VerticalContentAlignment="Bottom">
								<MenuItem.Icon>
									<iconPacks:PackIconMaterial Kind="GiftOutline" />
								</MenuItem.Icon>
							</MenuItem>
						</MenuItem>
					</Menu>
				</Button>
			</Grid>
			<DockPanel LastChildFill="False" Background="Transparent" AttachedBehavior:EnableDragHelper.EnableDrag="True">
				<TextBlock Name="Now_Playing_Label" Text="{Binding ElementName=Now_Playing_Label, Path=DataContext}" VerticalAlignment="Center" Visibility="Hidden" FontWeight="Bold" HorizontalAlignment="Center" FontSize="14" Background="Transparent" DataContext="PLAYING" />
				<Label Name="Now_Playing_Sep1_Label" Content="-" FontWeight="Bold" HorizontalAlignment="Center" FontSize="14" Background="Transparent" Visibility="{Binding ElementName=Now_Playing_Label, Path=Visibility}"/>
				<TextBlock Name="Now_Playing_Title_Label" Text="{Binding ElementName=Now_Playing_Title_Label, Path=DataContext}" VerticalAlignment="Center" FontWeight="Bold" HorizontalAlignment="Center" FontSize="14" Background="Transparent" DataContext=""/>
				<Label Name="Now_Playing_Sep2_Label" Content="-" FontWeight="Bold" HorizontalAlignment="Center" FontSize="14" Background="Transparent" Visibility="{Binding ElementName=Now_Playing_Label, Path=Visibility}"/>
				<TextBlock Name="Now_Playing_Artist_Label" Text="{Binding ElementName=Now_Playing_Artist_Label, Path=DataContext}" VerticalAlignment="Center" FontWeight="Bold" HorizontalAlignment="Center" FontSize="14" Background="Transparent" DataContext=""/>
				<Separator Margin="10,0,0,0" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Height="20" Background="Transparent"/>
			</DockPanel>
		</mah:WindowCommands>
	</mah:MetroWindow.LeftWindowCommands>
	<Grid Name="RootGrid" HorizontalAlignment="stretch" ShowGridLines="false" VerticalAlignment="Stretch" Background="Transparent" Margin="0,0,0,0">
		<Grid.RowDefinitions>
			<RowDefinition Name="RootGrid_Row1" Height="0">
				<RowDefinition.Style>
					<Style>
						<Style.Triggers>
							<MultiDataTrigger>
								<MultiDataTrigger.Conditions>
									<Condition Binding="{Binding ElementName=VideoButton_ToggleButton, Path=IsChecked}" Value="True"/>
								</MultiDataTrigger.Conditions>
								<MultiDataTrigger.EnterActions>
									<BeginStoryboard>
										<Storyboard>
											<WpfExtensions:GridLengthAnimation Storyboard.TargetProperty="Height" To="115*" Duration="0:0:0.5"/>
										</Storyboard>
									</BeginStoryboard>
								</MultiDataTrigger.EnterActions>
								<MultiDataTrigger.ExitActions>
									<BeginStoryboard>
										<Storyboard>
											<WpfExtensions:GridLengthAnimation Storyboard.TargetProperty="Height" To="0" Duration="0:0:0.5"/>
										</Storyboard>
									</BeginStoryboard>
								</MultiDataTrigger.ExitActions>
							</MultiDataTrigger>
						</Style.Triggers>
					</Style>
				</RowDefinition.Style>
			</RowDefinition>
			<RowDefinition Height="451" MinHeight="451" MaxHeight="451"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="200*"/>
			<ColumnDefinition Width="200*"/>
		</Grid.ColumnDefinitions>
		<Grid HorizontalAlignment="stretch" Grid.Row="1" Grid.ColumnSpan="4" ShowGridLines="false" VerticalAlignment="Bottom" Name="MainGrid" Background="Transparent" AttachedBehavior:EnableDragHelper.EnableDrag="True">
			<Grid.RowDefinitions>
				<RowDefinition Height="100*"/>
				<RowDefinition Height="100*"/>
				<RowDefinition Height="20*"/>
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="38*"/>
				<ColumnDefinition Width="96*"/>
				<ColumnDefinition Width="200*"/>
			</Grid.ColumnDefinitions>
			<Grid Name="Webview2_Grid" Height="0" Width="0"/>
			<Grid Grid.Column="0" Grid.Row="0" Background="Black" Margin="4,0,0,2" HorizontalAlignment="Center" VerticalAlignment="Center" Panel.ZIndex="2" CacheMode="BitmapCache">
				<Border BorderBrush="Black" CornerRadius="2" Background="Black" BorderThickness="1" Width="94" Height="40" RenderTransformOrigin="0.5,0.5"/>
				<Button Name='OpenButton_Button' ToolTip="Open Media" Width="86" Height="32" Style="{StaticResource SamsonButtonStyle}" IsEnabled="true" RenderTransformOrigin="0.5,0.5">
					<Image Name="OpenButton" Width="86" Height="32" RenderOptions.BitmapScalingMode="LowQuality" />
				</Button>
			</Grid>
			<Grid Grid.Column="0" Grid.Row="1" Background="Transparent" Margin="4,0,0,2" HorizontalAlignment="Center" VerticalAlignment="Top" Panel.ZIndex="2">
				<TextBlock FontSize="10" VerticalAlignment="Center" Text="POWER" Margin="0,0,0,0" Foreground="#FF5D6162" FontWeight="Bold" TextOptions.TextFormattingMode="Ideal" TextOptions.TextHintingMode="Fixed"/>
			</Grid>				
			<Grid Grid.Column="0" Grid.Row="1" Background="Black" Margin="4,25,0,2" HorizontalAlignment="Center" VerticalAlignment="Top" Panel.ZIndex="2">
				<Border BorderBrush="Black" CornerRadius="2" Background="Black" BorderThickness="1" Width="94" Height="63" RenderTransformOrigin="0.5,0.5"/>
				<ToggleButton Name='PowerButton_ToggleButton' ToolTip="Close App" Width="86" Height="55" Style="{StaticResource SamsonPowerButtonStyle}" IsEnabled="true" RenderTransformOrigin="0.5,0.5">
					<Grid>
						<Image Name="PowerButton" Width="86" Height="55" RenderOptions.BitmapScalingMode="LowQuality" CacheMode="BitmapCache" />
					</Grid>
				</ToggleButton>
			</Grid>
			<Grid HorizontalAlignment="stretch" Grid.Row="1" Grid.Column="2" ShowGridLines="false" Margin="43,23,0,0" VerticalAlignment="Top" Background="Transparent" Panel.ZIndex="2">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="88"/>
					<ColumnDefinition Width="92"/>
					<ColumnDefinition Width="132"/>
					<ColumnDefinition Width="132"/>
					<ColumnDefinition Width="92"/>
					<ColumnDefinition Width="92"/>
					<ColumnDefinition Width="92"/>
					<ColumnDefinition Width="92"/>
					<ColumnDefinition Width="92"/>
				</Grid.ColumnDefinitions>
				<ToggleButton Name='RecordButton_ToggleButton' ToolTip="See help topic for 'Enable Spotify Integration' under Spotify settings to learn how to use" Tag="Record" Grid.Column="0" Margin="0,0,0,0" Width="88" Height="55" Style="{StaticResource SamsonSetupMediumButtonStyle}" IsEnabled="true" Panel.ZIndex="2" RenderTransformOrigin="0.5,0.5">
					<Grid>
						<Image Name="RecordButton" Width="88" Height="55" RenderOptions.BitmapScalingMode="LowQuality" CacheMode="BitmapCache" RenderTransformOrigin="0.5,0.5"/>
						<TextBlock FontSize="11" VerticalAlignment="Center" HorizontalAlignment="Right" Text="RECORD" Margin="0,0,10,0" Foreground="#FF5D6162" FontWeight="Bold" TextOptions.TextFormattingMode="Ideal" TextOptions.TextHintingMode="Fixed"/>
					</Grid>
				</ToggleButton>
				<Button Name='RestartButton' Grid.Column="1" Tag="Pause" ToolTip="Restart Current Media" Margin="4,0,0,0" Width="88" Height="55" Style="{StaticResource SamsonButtonStyle}" IsEnabled="true" Panel.ZIndex="2" RenderTransformOrigin="0.5,0.5">
					<Grid>
						<Image Name="RestartButton_Image" Width="88" Height="55" RenderOptions.BitmapScalingMode="LowQuality" CacheMode="BitmapCache" RenderTransformOrigin="0.5,0.5"/>
						<TextBlock FontSize="11" VerticalAlignment="Center" HorizontalAlignment="Right" Text="RESTART" Margin="0,0,10,0" Foreground="#FF5D6162" FontWeight="Bold" TextOptions.TextFormattingMode="Ideal" TextOptions.TextHintingMode="Fixed"/>
					</Grid>
				</Button>
				<Button Name='StopButton_Button' ToolTip="Stop Playback" Grid.Column="2" Margin="4,0,0,0" Width="128" Height="55" Style="{StaticResource SamsonButtonStyle}" IsEnabled="true" HorizontalAlignment="Center" Panel.ZIndex="2" RenderTransformOrigin="0.5,0.5">
					<Grid>
						<Image Name="StopButton" Width="128" Height="55" RenderOptions.BitmapScalingMode="LowQuality" CacheMode="BitmapCache"/>
						<TextBlock FontSize="11" VerticalAlignment="Center" HorizontalAlignment="Right" Text="STOP" Margin="0,0,12,0" Foreground="#FF5D6162" FontWeight="Bold" TextOptions.TextFormattingMode="Ideal" TextOptions.TextHintingMode="Fixed"/>
					</Grid>
				</Button>
				<ToggleButton Name='PlayButton_ToggleButton' Grid.Column="3" Margin="4,0,0,0" Width="128" Height="55" Style="{StaticResource SamsonLargeToggleButtonStyle}" IsEnabled="true" Panel.ZIndex="2" RenderTransformOrigin="0.5,0.5">
					<Grid>
						<Image Name="PlayButton" Width="128" Height="55" RenderOptions.BitmapScalingMode="LowQuality" CacheMode="BitmapCache" RenderTransformOrigin="0.5,0.5"/>
						<TextBlock FontSize="11" VerticalAlignment="Center" HorizontalAlignment="Right" Text="PLAY" Margin="0,0,10,0" Foreground="#FF5D6162" FontWeight="Bold" TextOptions.TextFormattingMode="Ideal" TextOptions.TextHintingMode="Fixed"/>
					</Grid>
				</ToggleButton>
				<Button Name='BackButton_Button' Grid.Column="4" Margin="4,0,0,0" Width="88" Height="55" Style="{StaticResource SamsonButtonStyle}" IsEnabled="true" HorizontalAlignment="Center" Panel.ZIndex="2" RenderTransformOrigin="0.5,0.5">
					<Grid>
						<Image Name="BackButton" Width="88" Height="55" RenderOptions.BitmapScalingMode="LowQuality" CacheMode="BitmapCache"/>
					</Grid>
				</Button>
				<Button Name='NextButton_Button' Grid.Column="5" Margin="4,0,0,0" Width="88" Height="55" Style="{StaticResource SamsonButtonStyle}" ToolTip="Next Media" IsEnabled="true" HorizontalAlignment="Center" Panel.ZIndex="2" RenderTransformOrigin="0.5,0.5">
					<Grid>
						<Image Name="NextButton" Width="88" Height="55" RenderOptions.BitmapScalingMode="LowQuality" CacheMode="BitmapCache"/>
					</Grid>
				</Button>
				<ToggleButton Name='MonitorButton_ToggleButton' Grid.Column="6" Margin="28,6,0,0" Width="60" Height="32" Style="{StaticResource SamsonMuteButtonStyle}" IsEnabled="true" Panel.ZIndex="2" RenderTransformOrigin="0.5,0.5">
					<Grid>
						<Image Name="MonitorButton" Width="60" Height="32" RenderOptions.BitmapScalingMode="LowQuality" CacheMode="BitmapCache" RenderTransformOrigin="0.5,0.5"/>
						<TextBlock FontSize="10" Name="MonitorButton_TextBlock" FontFamily="Arial Rounded MT" VerticalAlignment="Center" HorizontalAlignment="Center" Text="MONITOR" Margin="0,0,0,0" Foreground="#FF5D6162" FontWeight="Bold" RenderTransformOrigin="0.5,0.5"/>
					</Grid>
				</ToggleButton>
				<ToggleButton Name='MuteButton_ToggleButton' Grid.Column="7" Margin="20,6,0,0" Width="60" Height="32" Style="{StaticResource SamsonMuteButtonStyle}" IsEnabled="true" Panel.ZIndex="2" RenderTransformOrigin="0.5,0.5">
					<Grid>
						<Image Name="MuteButton" Width="60" Height="32" RenderOptions.BitmapScalingMode="LowQuality" CacheMode="BitmapCache" RenderTransformOrigin="0.5,0.5"/>
						<TextBlock FontSize="10" FontFamily="Arial Rounded MT" VerticalAlignment="Center" HorizontalAlignment="Right" Text="MUTE" Margin="0,0,5,0" Foreground="#FF5D6162" FontWeight="Bold" RenderTransformOrigin="0.5,0.5"/>
					</Grid>
				</ToggleButton>
				<ToggleButton Name='MiniPlayerButton_ToggleButton' Grid.Column="8" Margin="10,6,0,0" Width="60" Height="32" ToolTip="Mini Player" Style="{StaticResource SamsonMuteButtonStyle}" IsEnabled="true" Panel.ZIndex="2" RenderTransformOrigin="0.5,0.5">
					<Grid>
						<Image Name="MiniPlayerButton" Width="60" Height="32" RenderOptions.BitmapScalingMode="LowQuality" CacheMode="BitmapCache" RenderTransformOrigin="0.5,0.5"/>
						<TextBlock FontSize="10" FontFamily="Arial Rounded MT" VerticalAlignment="Center" HorizontalAlignment="Center" Text="MINI" Margin="0,0,0,0" Foreground="#FF5D6162" FontWeight="Bold" RenderTransformOrigin="0.5,0.5"/>
					</Grid>
				</ToggleButton>
			</Grid>
			<Grid HorizontalAlignment="stretch" Grid.Row="1" Grid.Column="2" ShowGridLines="false" Margin="43,0,0,32" VerticalAlignment="Bottom" Background="Transparent" Panel.ZIndex="2">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="64"/>
					<ColumnDefinition Width="87"/>
					<ColumnDefinition Width="87"/>
					<ColumnDefinition Width="87"/>
					<ColumnDefinition Width="87"/>
					<ColumnDefinition Width="87"/>
					<ColumnDefinition Width="87"/>
					<ColumnDefinition Width="82"/>
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition/>
					<RowDefinition/>
				</Grid.RowDefinitions>
				<ToggleButton Name='AudioButton_ToggleButton' Grid.Column="0" Grid.Row="0" Margin="0,0,0,0" Width="64" Height="18" Style="{StaticResource SamsonToggleButtonStyle}" IsEnabled="true" Panel.ZIndex="2" RenderTransformOrigin="0.5,0.5">
					<Grid>
						<Image Name="AudioButton" Width="64" Height="18" RenderOptions.BitmapScalingMode="LowQuality" CacheMode="BitmapCache" RenderTransformOrigin="0.5,0.5"/>
					</Grid>
				</ToggleButton>
				<TextBlock Name="AudioButton_TextBlock" Grid.Row="1" Grid.Column="0" FontSize="11" VerticalAlignment="Top" HorizontalAlignment="Center" Text="AUDIO" Margin="0,10,0,0" Foreground="#FF5D6162" FontWeight="Bold" TextOptions.TextFormattingMode="Ideal" TextOptions.TextHintingMode="Fixed"/>
				<ToggleButton Name='SettingsButton_ToggleButton' Grid.Column="1" Grid.Row="0" Margin="21,0,0,0" Width="64" Height="18" Style="{StaticResource SamsonToggleButtonStyle}" IsEnabled="true" Panel.ZIndex="2" RenderTransformOrigin="0.5,0.5">
					<Grid>
						<Image Name="SettingsButton" Width="64" Height="18" RenderOptions.BitmapScalingMode="LowQuality" CacheMode="BitmapCache" RenderTransformOrigin="0.5,0.5"/>
					</Grid>
				</ToggleButton>
				<TextBlock Name="SettingsButton_TextBlock" Grid.Row="1" Grid.Column="1" FontSize="11" VerticalAlignment="Top" HorizontalAlignment="Center" Text="SETTINGS" Margin="21,10,0,0" Foreground="#FF5D6162" FontWeight="Bold" TextOptions.TextFormattingMode="Ideal" TextOptions.TextHintingMode="Fixed"/>
				<ToggleButton Name='PlayQueueButton_ToggleButton' Grid.Column="2" Grid.Row="0" Margin="19,0,0,0" Width="64" Height="18" Style="{StaticResource SamsonToggleButtonStyle}" IsEnabled="true" Panel.ZIndex="2" RenderTransformOrigin="0.5,0.5">
					<Grid>
						<Image Name="PlayQueueButton" Width="64" Height="18" RenderOptions.BitmapScalingMode="LowQuality" CacheMode="BitmapCache" RenderTransformOrigin="0.5,0.5"/>
					</Grid>
				</ToggleButton>
				<TextBlock Name="PlayQueueButton_TextBlock" Grid.Row="1" Grid.Column="2" FontSize="11" VerticalAlignment="Top" HorizontalAlignment="Center" Text="PLAYLISTS" Margin="19,10,0,0" Foreground="#FF5D6162" FontWeight="Bold" TextOptions.TextFormattingMode="Ideal" TextOptions.TextHintingMode="Fixed"/>
				<ToggleButton Name='LibraryButton_ToggleButton' Grid.Column="3" Grid.Row="0" Margin="17,0,0,0" Width="64" Height="18" Style="{StaticResource SamsonToggleButtonStyle}" IsEnabled="true" Panel.ZIndex="2" RenderTransformOrigin="0.5,0.5">
					<Grid>
						<Image Name="LibraryButton" Width="64" Height="18" RenderOptions.BitmapScalingMode="LowQuality" CacheMode="BitmapCache" RenderTransformOrigin="0.5,0.5"/>
					</Grid>
				</ToggleButton>
				<TextBlock Name="LibraryButton_TextBlock" Grid.Row="1" Grid.Column="3" FontSize="11" VerticalAlignment="Top" HorizontalAlignment="Center" Text="LIBRARY" Margin="17,10,0,0" Foreground="#FF5D6162" FontWeight="Bold" TextOptions.TextFormattingMode="Ideal" TextOptions.TextHintingMode="Fixed"/>
				<ToggleButton Name='VideoButton_ToggleButton' Grid.Column="4" ToolTip="Toggle Video Player" Grid.Row="0" Margin="15,0,0,0" Width="64" Height="18" Style="{StaticResource SamsonToggleButtonStyle}" IsEnabled="true" Panel.ZIndex="2" RenderTransformOrigin="0.5,0.5">
					<ToggleButton.Resources>
						<WpfExtensions:TopConverter x:Key="TopConverter"/>
					</ToggleButton.Resources>
					<ToggleButton.Triggers>
						<EventTrigger RoutedEvent="ToggleButton.Checked">
							<EventTrigger.Actions>
